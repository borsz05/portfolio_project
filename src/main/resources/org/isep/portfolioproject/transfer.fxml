<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="326.0" prefWidth="493.0" spacing="12" stylesheets="@transfer.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.isep.portfolioproject.controller.TransferController">
    <padding>
        <Insets bottom="14" left="14" right="14" top="14" />
    </padding>
    <children>
        <Label styleClass="title" text="Transfer" />
        <VBox prefHeight="123.0" prefWidth="394.0" spacing="8" styleClass="card">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label prefHeight="18.0" prefWidth="102.0" styleClass="fieldLabel" text="From:" />
                        <ComboBox fx:id="fromAccountCombo" prefWidth="260" />
                        <Label fx:id="fromBalanceLabel" styleClass="muted" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label prefHeight="18.0" prefWidth="102.0" styleClass="fieldLabel" text="To:" />
                        <ComboBox fx:id="toAccountCombo" prefWidth="260" />
                        <Label fx:id="toBalanceLabel" styleClass="muted" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label prefHeight="18.0" prefWidth="101.0" styleClass="fieldLabel" text="Amount: (USD)" />
                        <TextField fx:id="amountField" prefWidth="260.0" promptText="e.g. 250.00" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox spacing="10">
            <children>
                <Button onAction="#onTransfer" prefHeight="34.0" prefWidth="469.0" styleClass="primaryBtn" text="Transfer" />

            </children>
        </HBox>
        <Label fx:id="statusLabel" wrapText="true" />
    </children>
</VBox>

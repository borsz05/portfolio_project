<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@login.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.isep.portfolioproject.controller.LoginController">
   <children>
      <VBox alignment="CENTER" layoutX="450.0" layoutY="228.0" maxWidth="320" prefWidth="320" spacing="10" styleClass="card">
         <padding>
            <Insets bottom="18" left="18" right="18" top="18" />
         </padding>
         <children>
            <Label styleClass="title" text="LOGIN" />
            <VBox alignment="CENTER_LEFT" maxWidth="280" spacing="6">
               <children>
                  <Label styleClass="fieldLabel" text="Username" />
                  <TextField fx:id="usernameField" maxWidth="280" promptText="enter username" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" maxWidth="280" spacing="6">
               <children>
                  <Label styleClass="fieldLabel" text="Password" />
                  <PasswordField fx:id="passwordField" maxWidth="280" promptText="enter password" />
               </children>
            </VBox>
            <Button maxWidth="280" onAction="#handleLogin" styleClass="primaryBtn" text="Log in" />
            <Button maxWidth="280" onAction="#handleOpenRegister" text="New user" />
         </children>
      </VBox>
   </children>
</AnchorPane>
